<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.potato.evolutiongame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.potato.evolutiongame.LoginActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.potato.evolutiongame.GameChooseActivity"
            android:label="@string/title_activity_game_choose" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.potato.evolutiongame.GameScreenActivity"
            android:label="@string/title_activity_game_screen" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.potato.evolutiongame.NewGameActivity"
            android:label="@string/title_activity_new_game" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.potato.evolutiongame.CardViewActivity"
            android:label="@string/title_activity_card_view" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.potato.evolutiongame.CreatureDetailActivity"
            android:label="@string/title_activity_creature_detail" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.potato.evolutiongame.MainMenuActivity"
            android:label="@string/title_activity_main_menu" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>